{
  "compilerOptions": {
      "target": "ES2017",        
      "experimentalDecorators": true,
      "moduleResolution": "Node",
      "jsx": "preserve",      
      "jsxFactory": "this.$render",
      "jsxFragmentFactory": "this.$render",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "declaration": true        
  }
}